NODE_ENV=development
PORT=8888

# Frontend origin for CORS (override or unset in production)
FRONTEND_URL=http://localhost:3000

# Vertex AI configuration
VERTEX_AI_PROJECT_ID=fgo-servant-quiz
VERTEX_AI_LOCATION=asia-northeast1
VERTEX_AI_MODEL=gemini-2.5-flash
# Local-only: path to your service account key JSON when not using Workload Identity
VERTEX_AI_CREDENTIALS_FILE=./fgo-servant-quiz-credentials.json

# MySQL connection settings
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=example-password
DB_NAME=fgo_servant_quiz
DB_TIMEZONE=Z
DB_CHARSET=utf8mb4_unicode_ci
# Set to "true" to enable verbose SQL logging
DB_LOGGING=false
# When using Cloud SQL Unix sockets, set the socket path (e.g. /cloudsql/PROJECT:REGION:INSTANCE)
# DB_SOCKET_PATH=/cloudsql/your-project:asia-northeast1:your-instance
DB_RETRY_ATTEMPTS=5
DB_RETRY_DELAY_MS=3000

# Batch tweet job configuration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
